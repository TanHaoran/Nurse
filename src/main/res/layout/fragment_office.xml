<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.jerry.nurse.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBarHeight"
        app:titleText="@string/office"/>

    <LinearLayout
        android:id="@+id/ll_event_report"
        style="@style/pluginLineStyle">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_event_report"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pluginLineTextMarginLeft"
            android:layout_weight="1"
            android:text="@string/eventReport"
            android:textColor="@color/pluginTitleTextColor"
            android:textSize="@dimen/pluginTitleTextSize"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_arrow_enter"/>
    </LinearLayout>

    <View
        style="@style/dividerLineStyle"/>

    <LinearLayout
        android:id="@+id/ll_nurse_class"
        style="@style/pluginLineStyle">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_nurse_class"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pluginLineTextMarginLeft"
            android:layout_weight="1"
            android:text="@string/nurseClass"
            android:textColor="@color/pluginTitleTextColor"
            android:textSize="@dimen/pluginTitleTextSize"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_arrow_enter"/>
    </LinearLayout>

    <View
        style="@style/dividerLineStyle"/>

    <LinearLayout
        android:id="@+id/ll_credit_check"
        style="@style/pluginLineStyle">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_credit_check"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pluginLineTextMarginLeft"
            android:layout_weight="1"
            android:text="@string/creditCheck"
            android:textColor="@color/pluginTitleTextColor"
            android:textSize="@dimen/pluginTitleTextSize"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_arrow_enter"/>
    </LinearLayout>

    <View
        style="@style/dividerLineStyle"/>

    <LinearLayout
        android:id="@+id/ll_schedule_check"
        style="@style/pluginLineStyle">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_schedule_check"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pluginLineTextMarginLeft"
            android:layout_weight="1"
            android:text="@string/scheduleCheck"
            android:textColor="@color/pluginTitleTextColor"
            android:textSize="@dimen/pluginTitleTextSize"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_arrow_enter"/>
    </LinearLayout>

    <View
        style="@style/dividerLineStyle"/>

</LinearLayout>
