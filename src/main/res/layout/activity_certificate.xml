<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jerry.nurse.activity.CertificateActivity">

    <com.jerry.nurse.view.TitleBar
        android:id="@+id/tb_certificate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:left_text="@string/back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/change_password_marginLeft"
        android:layout_marginTop="@dimen/certificate_text_marginTop"
        android:text="@string/name"
        android:textColor="@color/jumbo"
        android:textSize="@dimen/change_password_textSize"/>


    <EditText
        android:id="@+id/et_origin_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/change_password_edit_height"
        android:layout_marginLeft="@dimen/change_password_marginLeft"
        android:layout_marginRight="@dimen/change_password_marginLeft"
        android:layout_marginTop="@dimen/certificate_edit_marginTop"
        android:background="@drawable/edit_around_bg"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/change_password_edit_marginLeft"
        android:paddingRight="@dimen/change_password_edit_marginLeft"
        android:textColor="@color/oil"
        android:textSize="@dimen/login_edit_textSize"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/change_password_marginLeft"
        android:layout_marginTop="@dimen/certificate_text_marginTop"
        android:text="@string/certificate_number"
        android:textColor="@color/jumbo"
        android:textSize="@dimen/change_password_textSize"/>


    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/change_password_edit_height"
        android:layout_marginLeft="@dimen/change_password_marginLeft"
        android:layout_marginRight="@dimen/change_password_marginLeft"
        android:layout_marginTop="@dimen/certificate_edit_marginTop"
        android:background="@drawable/edit_around_bg"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/change_password_edit_marginLeft"
        android:paddingRight="@dimen/change_password_edit_marginLeft"
        android:textColor="@color/oil"
        android:textSize="@dimen/login_edit_textSize"/>

    <ImageView
        android:id="@+id/iv_certificate"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="@dimen/change_password_marginLeft"
        android:layout_marginRight="@dimen/change_password_marginLeft"
        android:layout_marginTop="@dimen/certificate_text_marginTop"
        android:background="@drawable/edit_around_bg"
        android:clickable="true"/>

</LinearLayout>
