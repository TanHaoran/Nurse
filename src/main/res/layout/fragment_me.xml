<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.jerry.nurse.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:title_text="@string/me"/>

    <RelativeLayout
        android:id="@+id/ll_personal_info"
        style="@style/BusinessLineStyle"
        android:layout_height="@dimen/personal_info_height">

        <com.jerry.nurse.view.CircleImageView
            android:id="@+id/civ_avatar"
            android:layout_width="@dimen/personal_Info_avatar_width"
            android:layout_height="@dimen/personal_Info_avatar_width"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_avatar_default"
            app:border_color="@color/white"
            app:border_width="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/civ_avatar"
            android:textColor="@color/monsoon"
            android:textSize="17sp"
            tools:text="张馨月"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@id/civ_avatar"
            android:textColor="@color/monsoon"
            android:textSize="14sp"
            tools:text="月光"/>

        <ImageView
            android:id="@+id/iv_arrow_enter"
            style="@style/ArrowEnterStyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_arrow_enter"
            android:textColor="@color/monsoon"
            android:textSize="@dimen/personal_info_right_textSize"
            tools:text="已认证"/>

    </RelativeLayout>

    <View
        style="@style/DividerBorderStyle"
        android:layout_marginBottom="@dimen/block_marginBottom"/>


    <View
        style="@style/DividerBorderStyle"/>

    <RelativeLayout
        android:id="@+id/rl_credit"
        style="@style/BusinessLineStyle">


        <TextView
            style="@style/PersonalInfoLineLeftTextStyle"
            android:text="@string/credit"/>

        <ImageView
            android:id="@+id/iv_arrow_credit"
            style="@style/ArrowEnterStyle"/>


    </RelativeLayout>

    <View
        style="@style/DividerBorderStyle"/>

    <RelativeLayout
        android:id="@+id/rl_collection"
        style="@style/BusinessLineStyle">

        <TextView
            style="@style/PersonalInfoLineLeftTextStyle"
            android:text="@string/collection"/>

        <ImageView
            style="@style/ArrowEnterStyle"/>

    </RelativeLayout>

    <View
        style="@style/DividerBorderStyle"/>

    <RelativeLayout
        android:id="@+id/rl_schedule"
        style="@style/BusinessLineStyle">

        <TextView
            style="@style/PersonalInfoLineLeftTextStyle"
            android:text="@string/schedule"/>

        <ImageView
            style="@style/ArrowEnterStyle"/>

    </RelativeLayout>

    <View
        style="@style/DividerBorderStyle"/>

    <RelativeLayout
        android:id="@+id/rl_exam"
        style="@style/BusinessLineStyle">

        <TextView
            style="@style/PersonalInfoLineLeftTextStyle"
            android:text="@string/exam"/>

        <ImageView
            style="@style/ArrowEnterStyle"/>

    </RelativeLayout>

    <View
        style="@style/DividerBorderStyle"
        android:layout_marginBottom="@dimen/block_marginBottom"/>

    <View
        style="@style/DividerBorderStyle"/>

    <RelativeLayout
        android:id="@+id/rl_setting"
        style="@style/BusinessLineStyle">

        <TextView
            style="@style/PersonalInfoLineLeftTextStyle"
            android:text="@string/setting"/>

        <ImageView
            style="@style/ArrowEnterStyle"/>

    </RelativeLayout>

    <View
        style="@style/DividerBorderStyle"/>


</LinearLayout>
