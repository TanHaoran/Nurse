<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/event_line_height"
                android:background="@color/white"
                android:paddingLeft="@dimen/personal_info_line_paddingLeft"
                android:paddingRight="@dimen/personal_info_line_paddingLeft">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="left"
        android:textColor="@color/normal_textColor"
        android:textSize="@dimen/normal_textSize"
        tools:text="发生时间"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:maxWidth="@dimen/event_line_edit_max_width"
        android:textColor="@color/normal_textColor"
        android:textSize="@dimen/normal_textSize"
        tools:text="2017-9-3 16:59:48"/>

</RelativeLayout>