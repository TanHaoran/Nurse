<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jerry.nurse.activity.MainActivity">

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:background="#B2B2B2"
        style="@style/DividerLineStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_menu_height"
        android:background="@color/background"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:drawableTop="@drawable/tab_menu_message"
                android:id="@+id/tv_message"
                style="@style/TabMenuTextStyle"
                android:text="@string/message"/>

            <TextView
                android:id="@+id/tv_message_num"
                style="@style/tab_menu_bg_num"
                android:layout_toRightOf="@+id/tv_message"
                android:visibility="gone"
                tools:text="1"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_office"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:drawableTop="@drawable/tab_menu_office"
                android:id="@+id/tv_office"
                style="@style/TabMenuTextStyle"
                android:text="@string/business"/>

            <TextView
                android:id="@+id/tv_office_num"
                style="@style/tab_menu_bg_num"
                android:layout_toRightOf="@+id/tv_office"
                android:visibility="gone"
                tools:text="1"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:drawableTop="@drawable/tab_menu_contact"
                android:id="@+id/tv_contact"
                style="@style/TabMenuTextStyle"
                android:text="@string/contact"/>

            <TextView
                android:id="@+id/tv_contact_num"
                style="@style/tab_menu_bg_num"
                android:layout_toRightOf="@+id/tv_contact"
                android:visibility="gone"
                tools:text="1"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:drawableTop="@drawable/tab_menu_me"
                android:id="@+id/tv_me"
                style="@style/TabMenuTextStyle"
                android:text="@string/mine"/>

            <TextView
                android:id="@+id/tv_me_num"
                style="@style/tab_menu_bg_num"
                android:layout_toRightOf="@+id/tv_me"
                android:visibility="gone"
                tools:text="1"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
